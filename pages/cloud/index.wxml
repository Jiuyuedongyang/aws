<view class="user_info">
  <image class="avatar" src="{{userInfo.avatarUrl}}" bindlongpress="goto_page_user_openid">
  </image>
  <button class="avatar_button" bindgetuserinfo="handleGetUserInfo" style='display:{{isShow?"block":"none"}}'
    open-type="getUserInfo">
    <text class="text">点击获取头像</text>
  </button>
  <view class="user_info_right">
    <text class="userName">hello,{{userInfo.nickName}}!</text>
    <text>欢迎来到aws考试</text>
  </view>
</view>

